import 'package:corona_app/Updates.dart';
import 'package:flutter/material.dart';
import 'Prevention.dart';
import 'Updates.dart';
void main()=> runApp(MaterialApp(
    home: Home()
));

class Home extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text(

            'Home',
            style: TextStyle(
              fontWeight: FontWeight.bold,
              fontSize: 25.0,

            )
        ),
        centerTitle: true,
        backgroundColor: Colors.greenAccent,
      ),
      body: Column(
        crossAxisAlignment: CrossAxisAlignment.stretch,
        children: <Widget>[
          Container(
            padding: EdgeInsets.fromLTRB(13.0, 20.0, 10.0, 10.0),
            child: Text(
              'The Coronavirus (COVID-19) has become one of the biggest issues our world is facing right now. With this, wrong information spreads, and people are misled. We, the app creators, want to provide information that is real and true so that people are not misled into believing otherwise. We will include news from different sources, allowing the reader to judge them based on their own reasoning.',
              style: TextStyle(
                fontFamily: 'ShortStack',
                fontSize: 18.0,
              ),
            ),


          ),
         Row(
           mainAxisAlignment: MainAxisAlignment.center,
           children: <Widget>[
             RaisedButton(
               color: Colors.greenAccent,
               child: Text(
                   'Prevention',
                 style: TextStyle(
                   color: Colors.white,
                 ),
               ),
               onPressed: () {
                 Navigator.push(context, MaterialPageRoute(
                     builder:((context)=> (Prevention())
                     )));
               },
             ),
             SizedBox(
               width: 10.0,
             ),
             RaisedButton(
               color: Colors.greenAccent,
               child: Text(
                   'Updates',
                 style: TextStyle(
                   color: Colors.white
                 ),
               ),
               onPressed: () {
                 Navigator.push(context, MaterialPageRoute(
                     builder:((context)=> (Updates())
                     )));
               },
             ),
           ],
         )
        ],
      )



    );
  }
}
